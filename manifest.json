{
    "manifest_version": 3,
    "name": "Break Reminder",
    "version": "1.0",
    "description": "Reminds you to take breaks.",
    "background": {
        "service_worker": "/js/background.js"
    },
    "permissions": [
        "tabs", 
        "activeTab",
        "storage",
        "alarms"
    ],
    
    "action": {
        "default_popup": "/html/popup.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }
}
